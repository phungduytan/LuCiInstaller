<Page x:Class="LuCiInstaller.Views.pages.DownloadAndInstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LuCiInstaller.Views.pages"
      mc:Ignorable="d" 
      Title="DownloadAndInstallPage"
      Height="100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Download: "/>
            <TextBlock Text="{Binding DownloadString,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
        </StackPanel>
        <ProgressBar Name="bar1" Height="8" Margin="0 10 0 10" Grid.Row="1"></ProgressBar>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Install: "/>
            <TextBlock Text="{Binding ExtractString,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
        </StackPanel>
        <ProgressBar x:Name="bar2" Height="8" Margin="0 10 0 10" Grid.Row="3"></ProgressBar>
    </Grid>
</Page>
